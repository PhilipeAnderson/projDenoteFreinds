<div class="container col-md-10">
    <div class="row">

        <table class="table table-hover">
            <thead>
                <tr>
                    <th class="col-md-2">Nome</th>
                    <th class="col-md-2">Email</th>
                    <th class="col-md-2">WhatsApp</th>
                    <th class="col-md-2">Sugestões</th>
                    <th class="col-md-1">Indicou</th>
                    <th class="col-md-1">Criado em:</th>
                    <th class="col-md-1">Editar</th>
                    <th class="col-md-1">Excluir</th>
                </tr>
            </thead>
        </table>

        {{#each links}}
        <table class="table table-hover">

            <tbody>
                <tr>
                    <td class="col-md-2">{{title}}</td>
                    <td class="col-md-2">{{url}}</td>
                    <td class="col-md-2">(48)95465212</td>
                    <td class="col-md-2">{{description}}</td>
                    <td class="col-md-1">YES</td>
                    <td class="col-md-1">{{timeago created_at}}</td>
                    <td class="col-md-1"><a href="/links/edit/{{id}}" class="btn btn-secondary">Editar</a></td>
                    <td class="col-md-1"><a href="/links/delete/{{id}}" class="btn btn-danger">Excluir</a></td>
                </tr>
                                {{!-- <tr>
                    <th scope="row">2</th>
                    <td>Jacob</td>
                    <td>Thornton</td>
                    <td>fat</td>
                    </tr>
                    <tr>
                    <th scope="row">3</th>
                    <td colspan="2">Larry the Bird</td>
                    <td>twitter</td>
                    </tr> --}}
            </tbody>
        </table>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>Sua área está limpa! Crie um!</p>
                <a href="/links/add">Novo Link </a>
            </div>
        </div>
        {{/each}}

    </div>
    <br /><br /><br /><br />
</div>
